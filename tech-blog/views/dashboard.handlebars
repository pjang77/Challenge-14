{{#extend "main"}}

  {{#content "body"}}
    <h1>Dashboard</h1>
    {{#if userPosts}}
      {{#each userPosts}}
        <div class="post">
          <h2>{{this.title}}</h2>
          <p>{{this.content}}</p>

        </div>
      {{/each}}
    {{else}}
      <p>You have no posts yet.</p>
    {{/if}}
    <button id="new-post-btn">Create New Post</button>
  {{/content}}

{{/extend}}